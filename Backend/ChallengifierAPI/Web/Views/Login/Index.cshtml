
@inherits System.Web.Mvc.WebViewPage

<h2>Login</h2>
<div ng-app="Login">
    <form ng-controller="LoginController">
        <!-- USERNAME -->
        <div id="name-group" class="form-group">
            <label>Email</label>
            <input type="email" name="name" class="form-control" placeholder="Bruce Wayne">
        </div>

        <!-- PASSWORDE -->
        <div id="password-group" class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control">
        </div>

        <!-- SUBMIT BUTTON -->
        <button type="button" class="btn btn-success btn-lg btn-block" ng-click="submitForm()">
            <span class="glyphicon glyphicon-flash"></span> Submit!
        </button>
    </form>
</div>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/myScripts/login.js"></script>
