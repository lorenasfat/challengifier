<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_challenge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lorena.challengifier.activities.challenge.ViewChallengeActivity">

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewChallengeTitleLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="normal|bold"
        android:layout_toStartOf="@+id/buttonAddChallengeAsObjective" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChallengeTitleLabel"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewChallengeTitle"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textViewChallengeDescriptionLabel"
        android:layout_below="@+id/textViewChallengeTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChallengeDescriptionLabel"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewChallengeDescription"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Suggested Deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/textViewChalengeDeadlineLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textViewChallengeDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChalengeDeadlineLabel"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewChallengeDeadline"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewChallengeDeadline"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/planningStepsList" />

    <Button
        android:text="Accept Challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonAddChallengeAsObjective"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:text="Planning Steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChallengeDeadline"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewStepsLabel"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="textEnd" />
</RelativeLayout>
