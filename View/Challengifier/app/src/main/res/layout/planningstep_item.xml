<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textViewPSTitle"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewPSdescriprion"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPSTitle" />

    <TextView
        android:id="@+id/textViewPSTime"
        android:layout_width="173dp"
        android:layout_height="15dp"
        android:text="TextView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPSdescriprion"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="203dp" />

    <TextView
        android:id="@+id/textViewPSTimeText"
        android:layout_width="127dp"
        android:layout_height="16dp"
        android:text="Suggested timeline:"
        android:textStyle="bold"
        android:layout_marginStart="21dp"
        android:layout_marginTop="-9dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPSdescriprion"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewPSTime"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.933" />
</android.support.constraint.ConstraintLayout>

